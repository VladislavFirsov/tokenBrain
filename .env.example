# TokenBrain Bot Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED
# ===========================================

# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ===========================================
# OPTIONAL (have defaults)
# ===========================================

# Environment: development | production
ENVIRONMENT=development

# Use mock services (no real API calls)
# Set to false when you have real API keys
USE_MOCK_SERVICES=true

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# API timeout in seconds
API_TIMEOUT_SECONDS=10

# ===========================================
# API KEYS (required when USE_MOCK_SERVICES=false)
# ===========================================

# Helius API key for Solana on-chain data
# Get it at: https://helius.dev/
HELIUS_API_KEY=

# OpenRouter API key for LLM (Claude)
# Get it at: https://openrouter.ai/
OPENROUTER_API_KEY=

# LLM model to use via OpenRouter
# Default: anthropic/claude-3.5-sonnet
LLM_MODEL=anthropic/claude-3.5-sonnet

# ===========================================
# LEGACY (not used in current version)
# ===========================================

# Birdeye API key for market data
# Get it at: https://birdeye.so/
BIRDEYE_API_KEY=

# Claude API key for LLM (direct, not via OpenRouter)
# Get it at: https://console.anthropic.com/
CLAUDE_API_KEY=
